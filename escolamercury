<body>

<div class="container">
    <h2>Verificação de Autenticidade</h2>

    <input type="text" id="codigo" placeholder="Digite o código do diploma">
    <br>
    <button onclick="verificar()">Verificar</button>

    <div class="resultado" id="resultado"></div>
</div>

<script>
const diplomas = {
    "DIP-2026-001": {
        nome: "João da Silva",
        curso: "Técnico em Informática",
        carga: "120 horas",
        data: "10/02/2026",
        registro: "REG-987654"
    },
    "DIP-2026-002": {
        nome: "Maria Oliveira",
        curso: "Montagem e Manutenção",
        carga: "80 horas",
        data: "05/02/2026",
        registro: "REG-123456"
    }
};

function verificar(){
    let codigo = document.getElementById("codigo").value.toUpperCase();
    let resultado = document.getElementById("resultado");

    if(diplomas[codigo]){
        let aluno = diplomas[codigo];
        resultado.innerHTML = `
            <p class="valido">✔ Diploma Válido</p>
            <strong>Nome:</strong> ${aluno.nome}<br>
            <strong>Curso:</strong> ${aluno.curso}<br>
            <strong>Carga Horária:</strong> ${aluno.carga}<br>
            <strong>Data de Conclusão:</strong> ${aluno.data}<br>
            <strong>Nº Registro:</strong> ${aluno.registro}
        `;
    } else {
        resultado.innerHTML = `<p class="invalido">✖ Código não encontrado</p>`;
    }
}
</script>

</body>
